{
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"features": {
		"ghcr.io/devcontainers/features/aws-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/azure-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/terraform:1": {
			"version": "latest",
			"tflint": "latest",
			"terragrunt": "latest"
		},
		"ghcr.io/dhoeric/features/google-cloud-cli:1": {},
		"ghcr.io/audacioustux/devcontainers/k9s:1": {},
		"ghcr.io/larsnieuwenhuizen/features/jqyq:0": {},
		"ghcr.io/devcontainers-extra/features/bash-command:1": {
			"command": "mv ./home-dir-content/ /home/codespace && sh ${localWorkspaceFolder}/setup-scripts/lumineer.sh"
		},
		"ghcr.io/microsoft/codespace-features/external-repository:latest": {
			"cloneUrl": "https://slb-swt@dev.azure.com/slb-swt/delfi-delivery-infrastructure/_git/lightops-charts",
			"cloneSecret": "AZURE_DEVOPS_EXT_PAT",
			"folder": "/workspaces/slb-repos"
    	}
	},
	"initializeCommand": [
		"mkdir -p /workspaces/slb-repos"
	],
	"onCreateCommand": "external-git clone",
	"postStartCommand": "external-git config && mv ${localWorkspaceFolder}/home-dir-content/ ${localEnv:HOME} && sh ${localWorkspaceFolder}/setup-scripts/lumineer.sh"
}